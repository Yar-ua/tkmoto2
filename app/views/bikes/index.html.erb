<h1>Мото:</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Модель</th>
        <th>Логин владельца</th>
        <th>Год выпуска</th>
        <th>Цвет</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bikes.each do |bike| %>
        <tr>

          <td><%= link_to bike.name, bike %><br/>
            <%= link_to 'Топливная статистика', new_bike_stata_fuel_path(bike), :class => "btn btn-default btn-sm", method: :get %><br/>
            <%= link_to 'Ремонтная статистика', new_bike_stata_repair_path(bike), :class => "btn btn-default btn-sm", method: :get %>
          </td>
          <td><%= bike.user_name %></td>
          <td><%= bike.year %></td>
          <td><%= bike.color %></td>
          <td>
          <div class="btn-group btn-group-vertical" role="group" aria-label="...">
            <%= link_to 'Показать', bike_path(bike), class: "btn btn-default btn-sm" %>
            <%= link_to 'Редактировать', edit_bike_path(bike), class: "btn btn-default btn-sm" %>
            <%= link_to 'Удалить', bike, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Уверен что хочешь удалить байк и всю статистику?' } %>
          </div>
          </td>
        
        </tr>
      <% end %>
    </tbody>
  </table>

<hr>
    <%= link_to 'Создать новый байк', new_bike_path, class: "btn btn-success btn-sm" %>