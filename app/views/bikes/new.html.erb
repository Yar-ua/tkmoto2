<h1>Создание нового байка</h1>

  <% if @bike.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
        	      
  	    <h2>
          <span class="glyphicon glyphicon-alert" aria-hidden="true"></span>
           При вводе данных возникло <%= @bike.errors.count %> ошибки
        </h2>
            
        <ul>
          <% @bike.errors.each do |attribute, error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

<%= render 'form', bike: @bike %>