<%= form_for(@bike) do |f| %>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :name, 'Модель байка' %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :user_name, 'Логин владельца' %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :user_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :year, 'Год выпуска' %>
    </div>
    <div class="col-md-2">
      <%= f.number_field :year %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :color, 'Цвет' %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :color %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: "btn btn-success btn-sm" %> | 
    <%= link_to 'Назад', bikes_path, class: "btn btn-default btn-sm" %>
  </div>

<% end %>